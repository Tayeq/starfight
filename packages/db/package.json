{
  "name": "@repo/db",
  "main": "./src/index.ts",
  "private": true,
  "postinstall": "bunx prisma generate",
  "scripts": {
    "generate": "prisma generate",
    "generate:watch": "bunx prisma generate --watch"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@prisma/client": "^6.11.1",
    "prisma": "^6.11.1"
  },
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    }
  },
  "files": [
    "./src/**/*"
  ],
  "prisma": {
    "seed": "bun run src/seed.ts"
  }
}
