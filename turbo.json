{
  "$schema": "https://turborepo.com/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["DATABASE_URL", "API_KEY"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": ["DATABASE_URL", "API_KEY"]
    },
    "start": {
      "cache": false,
      "persistent": true,
      "env": ["DATABASE_URL", "API_KEY"]
    },
    "start:prod": {
      "cache": false,
      "persistent": true,
      "env": ["DATABASE_URL", "API_KEY"]
    },
    "clean": {
      "cache": false
    },
    "lint": {},
    "test": {},
    "test:e2e": {}
  }
}
